<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>

        <form class="product-form" >
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" readonly value="<%= product[0].title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Url</label>
                <input type="text" name="imageUrl" id="imageUrl" readonly value="<%= product[0].bookUrl %>" >
            </div>
            
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" readonly value="<%= product[0].price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <input type="text" name="description" id="description"   readonly value="<%= product[0].description %>">
            </div>
        </form>
        <%- include('../includes/add-to-cart.ejs' , {product:product[0]}) %>
       
    </main>
<%- include('../includes/end.ejs') %>